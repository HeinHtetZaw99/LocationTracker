<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSecondaryLight" />
            <size android:width="80dp" android:height="4dp" />
            <corners android:radius="@dimen/card_default_corner_radius" />
            <stroke android:width="2dp" android:color="@color/colorSecondaryLight" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary" />
            <size android:width="80dp" android:height="4dp" />
            <corners android:radius="@dimen/card_default_corner_radius" />
            <stroke android:width="2dp" android:color="@color/colorPrimary" />
        </shape>
    </item>
</selector>