<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/QuestioniareStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_2xlarge">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/titleTv"
        style="@style/QuestionTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you having any of these symptoms ? " />

    <TextView
        android:id="@+id/subTitleTv"
        app:layout_constraintTop_toBottomOf="@id/titleTv"
        style="@style/QuestionSubTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTv"
        android:text="Please choose all those applied" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/subTitleTv"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_below="@id/subTitleTv">


        <RadioGroup
            android:id="@+id/symptomSelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <CheckBox
                android:id="@+id/tirednessBtn"
                style="@style/CheckBtnStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xSmall"
                android:layout_marginBottom="@dimen/margin_xSmall"
                android:minHeight="50dp"
                android:text="ပင်ပန်းခြင်း" />

            <CheckBox
                android:id="@+id/sneezingBtn"
                style="@style/CheckBtnStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xSmall"
                android:layout_marginBottom="@dimen/margin_xSmall"
                android:minHeight="50dp"
                android:text="နှာ‌ချေခြင်း" />

            <CheckBox
                android:id="@+id/headacheBtn"
                style="@style/CheckBtnStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xSmall"
                android:layout_marginBottom="@dimen/margin_xSmall"
                android:minHeight="50dp"
                android:text="ခေါင်းကိုက်ခြင်း" />

            <CheckBox
                android:id="@+id/soreThroatBtn"
                style="@style/CheckBtnStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xSmall"
                android:layout_marginBottom="@dimen/margin_xSmall"
                android:minHeight="50dp"
                android:text="လည်ချောင်းနာခြင်း" />

            <CheckBox
                android:id="@+id/diaherreaBtn"
                style="@style/CheckBtnStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xSmall"
                android:layout_marginBottom="@dimen/margin_xSmall"
                android:minHeight="50dp"
                android:text="ဝမ်းလျောခြင်း" />

            <CheckBox
                android:id="@+id/vomitingBtn"
                style="@style/CheckBtnStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xSmall"
                android:layout_marginBottom="@dimen/margin_xSmall"
                android:minHeight="50dp"
                android:text="အော့အန်ခြင်း" />

            <CheckBox
                android:id="@+id/noOdourBtn"
                style="@style/CheckBtnStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xSmall"
                android:layout_marginBottom="@dimen/margin_xSmall"
                android:minHeight="50dp"
                android:text="အနံ့ပျောက်ခြင်း" />

            <CheckBox
                android:id="@+id/noAppetiteBtn"
                style="@style/CheckBtnStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xSmall"
                android:layout_marginBottom="@dimen/margin_xSmall"
                android:minHeight="50dp"
                android:text="အရသာပျက်ခြင်း" />

            <CheckBox
                android:id="@+id/bodyPainBtn"
                style="@style/CheckBtnStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xSmall"
                android:layout_marginBottom="@dimen/margin_xSmall"
                android:minHeight="50dp"
                android:text="ခန္ဓာကိုယ်ကိုက်ခဲခြင်း" />

            <CheckBox
                android:id="@+id/runnyNoseBtn"
                style="@style/CheckBtnStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xSmall"
                android:layout_marginBottom="@dimen/margin_xSmall"
                android:minHeight="50dp"
                android:text="နှာစေးခြင်း" />


            <CheckBox
                android:id="@+id/noSymptomsBtn"
                style="@style/CheckBtnStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xSmall"
                android:layout_marginBottom="@dimen/margin_xSmall"
                android:minHeight="50dp"
                android:text="မရှိပါ" />

        </RadioGroup>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>