<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="data"
            type="com.locationtracker.sources.cache.data.AboutUsVO" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleTv"
            style="@style/BoldS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin_2xlarge"
            android:layout_toStartOf="@id/costTv"
            android:padding="@dimen/margin_3xSmall"
            android:textColor="@color/black"
            android:text="@{data.name}"
            tools:text="Ko Hein Htet Zaw" />

        <TextView
            android:id="@+id/costTv"
            style="@style/MediumS"
            android:layout_width="140dp"

            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_2xlarge"
            android:padding="@dimen/margin_3xSmall"
            android:textColor="@color/black"
            android:text="@{data.title}"
            tools:text="(BE CEIT)" />

    </RelativeLayout>
</layout>